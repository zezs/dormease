<% layout('layouts/boilerplate') %>



<div class=" col-12 ">
    
    <h1 style="text-align: center; margin-top: 0px;"><br>Market Place</h1>
    <p style="font-size: x-large; text-align: center;">Buy and Sell products here!</p>
    <hr>
    <div style="background-color: rgb(39, 42, 42);">
        <div class="offset-5" >
        <a style="margin: 10px 10px 10px 10px; padding: 15px 50px 15px 50px;" class="btn btn-secondary" href="/products/new"><b>+ Add Products</b></a>
        </div>
    </div>

    
    <hr>
    <% for(let product of products){ %>
        <div class="card mb-3" >
            <div class="row">
                <div class="col-md-4">
                    <img style="width: 500px; height: 300px;" class="img-fluid" src="<%=product.image%>">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= product.title %></h5>
                        <p class="card-text"><%= product.description %></p>
                        
                        <p class="card-text">
                            <small class="text-muted"><%= product.location %></small>
                        </p>
                        <a class="btn btn-primary" href="/products/<%=product._id%>">View</a>
                    </div>
                </div>
            </div>
        </div>
    <% } %>

</div>